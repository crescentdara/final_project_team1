<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tv_label_idle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="유휴비율"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"/>

    <RadioGroup
        android:id="@+id/rg_idle_ratio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/rb_idle_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="10% 미만 유휴"
            android:padding="12dp"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/rb_idle_10_50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="10~50% 미만 유휴"
            android:padding="12dp"
            android:layout_marginTop="8dp"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/rb_idle_50_70"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="50~70% 유휴"
            android:padding="12dp"
            android:layout_marginTop="8dp"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/rb_idle_70_100"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="70~100% 유휴"
            android:padding="12dp"
            android:layout_marginTop="8dp"
            android:textSize="16sp" />

    </RadioGroup>
    <Button
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="←"
        android:layout_marginTop="16dp"
        android:backgroundTint="#6200EE"
        android:textColor="#FFFFFF"
        android:padding="8dp"/>
</LinearLayout>
