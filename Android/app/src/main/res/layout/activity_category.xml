<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000">

    <!-- 배경 블러 효과를 위한 메인 화면 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F5F5"
        android:orientation="vertical">

        <!-- 상단 앱바 -->
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <com.google.android.material.appbar.MaterialToolbar
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="#2E7D32"
                app:title="부동산 실태조사"
                app:titleTextColor="@android:color/white" />

        </com.google.android.material.appbar.AppBarLayout>

        <!-- 메인 콘텐츠 (블러 효과) -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <!-- 환영 메시지 -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:layout_marginBottom="24dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="24dp"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginBottom="16dp"
                            android:src="@mipmap/ic_launcher"
                            android:contentDescription="앱 로고" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/main_welcome"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="#2E7D32" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="@string/main_description"
                            android:textSize="16sp"
                            android:textColor="#666666"
                            android:gravity="center" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- 기능 버튼들 -->
                <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginBottom="12dp"
                    android:text="@string/main_survey_start"
                    android:textSize="16sp"
                    app:backgroundTint="#2E7D32"
                    app:cornerRadius="8dp" />

                <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginBottom="12dp"
                    android:text="@string/main_survey_status"
                    android:textSize="16sp"
                    app:backgroundTint="#4CAF50"
                    app:cornerRadius="8dp" />

                <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginBottom="12dp"
                    android:text="@string/main_settings"
                    android:textSize="16sp"
                    app:backgroundTint="#FF9800"
                    app:cornerRadius="8dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/logoutButton"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="24dp"
                    android:text="@string/main_logout"
                    android:textSize="16sp"
                    app:backgroundTint="#F44336"
                    app:cornerRadius="8dp" />

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <!-- 사이드 드로어 모달 -->
    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:elevation="8dp">

        <!-- 모달 헤더 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="#2E7D32"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <ImageView
                android:id="@+id/btnClose"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:padding="4dp"
                android:tint="@android:color/white" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LOGOUT"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- 메뉴 아이템들 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="16dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSurveyStatus"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="8dp"
                android:text="조사현황"
                android:textAlignment="textStart"
                android:textColor="#333333"
                android:textSize="16sp"
                app:backgroundTint="#F5F5F5"
                app:cornerRadius="8dp"
                app:icon="@android:drawable/ic_menu_agenda"
                app:iconGravity="textStart"
                app:iconPadding="16dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSurveyList"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="8dp"
                android:text="조사목록 관리"
                android:textAlignment="textStart"
                android:textColor="#333333"
                android:textSize="16sp"
                app:backgroundTint="#F5F5F5"
                app:cornerRadius="8dp"
                app:icon="@android:drawable/ic_menu_manage"
                app:iconGravity="textStart"
                app:iconPadding="16dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSurveyInput"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="8dp"
                android:text="조사결과 입력"
                android:textAlignment="textStart"
                android:textColor="#333333"
                android:textSize="16sp"
                app:backgroundTint="#F5F5F5"
                app:cornerRadius="8dp"
                app:icon="@android:drawable/ic_menu_edit"
                app:iconGravity="textStart"
                app:iconPadding="16dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDataTransmission"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="8dp"
                android:text="데이터 전송"
                android:textAlignment="textStart"
                android:textColor="#333333"
                android:textSize="16sp"
                app:backgroundTint="#F5F5F5"
                app:cornerRadius="8dp"
                app:icon="@android:drawable/ic_menu_upload"
                app:iconGravity="textStart"
                app:iconPadding="16dp" />


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>



