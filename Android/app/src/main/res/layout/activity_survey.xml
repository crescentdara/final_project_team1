<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- 스크롤 가능한 본문 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="250dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 상단 탭 -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_investigation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#6898FF"
                        android:text="조사불가"
                        android:textColor="#FFFFFF" />

                    <Button
                        android:id="@+id/btn_purpose"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:backgroundTint="#6898FF"
                        android:text="행정목적"
                        android:textColor="#FFFFFF" />

                    <Button
                        android:id="@+id/btn_idle_ratio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:backgroundTint="#6898FF"
                        android:text="유휴비율"
                        android:textColor="#FFFFFF" />

                    <Button
                        android:id="@+id/btn_safety"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:backgroundTint="#6898FF"
                        android:text="안전등급"
                        android:textColor="#FFFFFF" />

                    <Button
                        android:id="@+id/btn_external_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:backgroundTint="#6898FF"
                        android:text="외부상태"
                        android:textColor="#FFFFFF" />

                    <Button
                        android:id="@+id/btn_internal_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:backgroundTint="#6898FF"
                        android:text="내부상태"
                        android:textColor="#FFFFFF" />
                </LinearLayout>
            </HorizontalScrollView>

            <!-- 주소 표시 -->
            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:text="조사중: -"
                android:layout_marginBottom="16dp"
                android:textColor="#333333"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- ===== 스테이지들 ===== -->

            <!-- 1. 조사불가 -->
            <LinearLayout
                android:id="@+id/stage_investigation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="#FFFFFF"
                android:elevation="2dp"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="조사불가 여부"
                    android:textColor="#333333"
                    android:textStyle="bold" />

                <RadioGroup
                    android:id="@+id/radioGroup_possible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="가능"
                        android:textColor="#333333" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="불가"
                        android:textColor="#333333" />
                </RadioGroup>
            </LinearLayout>

            <!-- 2. 행정목적 -->
            <LinearLayout
                android:id="@+id/stage_purpose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="#FFFFFF"
                android:elevation="2dp"
                android:orientation="vertical"
                android:padding="12dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="행정목적 활용여부"
                    android:textColor="#333333"
                    android:textStyle="bold" />

                <RadioGroup
                    android:id="@+id/radioGroup_adminUse"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="활용"
                        android:textColor="#333333" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="일부 활용"
                        android:textColor="#333333" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="미활용"
                        android:textColor="#333333" />
                </RadioGroup>
            </LinearLayout>

            <!-- 3. 유휴비율 -->
            <LinearLayout
                android:id="@+id/stage_idle_ratio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="#FFFFFF"
                android:elevation="2dp"
                android:orientation="vertical"
                android:padding="12dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="유휴비율"
                    android:textColor="#333333"
                    android:textStyle="bold" />

                <RadioGroup
                    android:id="@+id/radioGroup_idleRate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0~10%"
                        android:textColor="#333333" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10~30%"
                        android:textColor="#333333" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="30~50%"
                        android:textColor="#333333" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="50% 이상"
                        android:textColor="#333333" />
                </RadioGroup>
            </LinearLayout>

            <!-- 4. 안전등급 -->
            <LinearLayout
                android:id="@+id/stage_safety"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="#FFFFFF"
                android:elevation="2dp"
                android:orientation="vertical"
                android:padding="12dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="안전등급"
                    android:textColor="#333333"
                    android:textStyle="bold" />

                <RadioGroup
                    android:id="@+id/radioGroup_safety"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="A"
                        android:textColor="#333333" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="B"
                        android:textColor="#333333" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="C"
                        android:textColor="#333333" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="D"
                        android:textColor="#333333" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="E"
                        android:textColor="#333333" />
                </RadioGroup>
            </LinearLayout>

            <!-- 5. 외부상태 -->
            <LinearLayout
                android:id="@+id/stage_external_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="#FFFFFF"
                android:elevation="2dp"
                android:orientation="vertical"
                android:padding="12dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="외부상태"
                    android:textColor="#333333"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="외벽"
                    android:textColor="#333333" />

                <RadioGroup
                    android:id="@+id/radioGroup_wall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="양호"
                        android:textColor="#333333" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="보통"
                        android:textColor="#333333" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="불량"
                        android:textColor="#333333" />
                </RadioGroup>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="옥상"
                    android:textColor="#333333" />

                <RadioGroup
                    android:id="@+id/radioGroup_roof"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="양호"
                        android:textColor="#333333" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="보통"
                        android:textColor="#333333" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="불량"
                        android:textColor="#333333" />
                </RadioGroup>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="창호"
                    android:textColor="#333333" />

                <RadioGroup
                    android:id="@+id/radioGroup_window"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="양호"
                        android:textColor="#333333" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="보통"
                        android:textColor="#333333" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="불량"
                        android:textColor="#333333" />
                </RadioGroup>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="주차"
                    android:textColor="#333333" />

                <RadioGroup
                    android:id="@+id/radioGroup_parking"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="가능"
                        android:textColor="#333333" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="불가"
                        android:textColor="#333333" />
                </RadioGroup>

                <EditText
                    android:id="@+id/input_extEtc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#EEEEEE"
                    android:layout_marginTop="16dp"
                    android:hint="외부 기타사항 입력"
                    android:layout_marginBottom="16dp"
                    android:textColor="#333333" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="외부 사진"
                    android:textColor="#333333"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/img_extPhoto"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:adjustViewBounds="true"
                    android:background="#CCCCCC"
                    android:scaleType="centerCrop" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp">

                    <!-- 카메라 버튼: 가운데 정렬 -->
                    <ImageButton
                        android:id="@+id/btn_extPhoto"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:layout_gravity="center"
                        android:background="@drawable/circle_border"
                        android:padding="8dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_camera" />

                    <!-- 편집 버튼: 오른쪽 끝 정렬 -->
                    <ImageButton
                        android:id="@+id/btn_extEditPhoto"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_gravity="end|center_vertical"
                        android:backgroundTint="#C5C7CA"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_edit"
                        android:layout_marginEnd="12dp" />

                </FrameLayout>
            </LinearLayout>

            <!-- 6. 내부상태 -->
            <LinearLayout
                android:id="@+id/stage_internal_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="#FFFFFF"
                android:elevation="2dp"
                android:orientation="vertical"
                android:padding="12dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="내부상태"
                    android:textColor="#333333"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="현관"
                    android:textColor="#333333" />

                <RadioGroup
                    android:id="@+id/radioGroup_entrance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="양호"
                        android:textColor="#333333" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="보통"
                        android:textColor="#333333" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="불량"
                        android:textColor="#333333" />
                </RadioGroup>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="천장"
                    android:textColor="#333333" />

                <RadioGroup
                    android:id="@+id/radioGroup_ceiling"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="양호"
                        android:textColor="#333333" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="보통"
                        android:textColor="#333333" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="불량"
                        android:textColor="#333333" />
                </RadioGroup>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="바닥"
                    android:textColor="#333333" />

                <RadioGroup
                    android:id="@+id/radioGroup_floor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="양호"
                        android:textColor="#333333" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="보통"
                        android:textColor="#333333" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="불량"
                        android:textColor="#333333" />
                </RadioGroup>

                <EditText
                    android:id="@+id/input_intEtc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#EEEEEE"
                    android:layout_marginTop="16dp"
                    android:hint="내부 기타사항 입력"
                    android:layout_marginBottom="16dp"
                    android:textColor="#333333" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="내부 사진"
                    android:textColor="#333333"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/img_intPhoto"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:adjustViewBounds="true"
                    android:background="#CCCCCC"
                    android:scaleType="centerCrop" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp">

                    <!-- 카메라 버튼: 가운데 정렬 + 원형 테두리 -->
                    <ImageButton
                        android:id="@+id/btn_intPhoto"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:layout_gravity="center"
                        android:background="@drawable/circle_border"
                        android:padding="8dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_camera" />

                    <!-- 편집 버튼: 오른쪽 끝 정렬 -->
                    <ImageButton
                        android:id="@+id/btn_intEditPhoto"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_gravity="end|center_vertical"
                        android:backgroundTint="#C5C7CA"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_edit"
                        android:layout_marginEnd="12dp" />

                </FrameLayout>

            </LinearLayout>

            <!-- 제출 / 임시저장 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/save_temp_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#6898FF"
                    android:text="임시저장"
                    android:textColor="#FFFFFF" />

                <Button
                    android:id="@+id/submit_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:backgroundTint="#6898FF"
                    android:text="제출"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- 이전 / 다음 버튼 고정 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:orientation="horizontal"
        android:layout_margin="16dp">

        <Button
            android:id="@+id/back_button"
            android:layout_width="80dp"
            android:layout_height="48dp"
            android:text="이전"
            android:textColor="#FFFFFF"
            android:backgroundTint="#6898FF" />

        <Button
            android:id="@+id/next_button"
            android:layout_width="80dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:text="다음"
            android:textColor="#FFFFFF"
            android:backgroundTint="#6898FF" />
    </LinearLayout>

</FrameLayout>
