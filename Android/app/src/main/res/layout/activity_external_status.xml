<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- ✅ 외부상태 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="외부상태"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>

        <!-- 외벽 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="외벽"
            android:textSize="16sp"
            android:layout_marginTop="8dp"/>
        <RadioGroup
            android:id="@+id/radioGroup_wall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton android:id="@+id/radio_wall_good" android:text="상" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/radio_wall_normal" android:text="중" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/radio_wall_bad" android:text="하" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </RadioGroup>

        <!-- 지붕옥상 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="지붕옥상"
            android:textSize="16sp"
            android:layout_marginTop="8dp"/>
        <RadioGroup
            android:id="@+id/radioGroup_roof"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton android:id="@+id/radio_roof_good" android:text="상" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/radio_roof_normal" android:text="중" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/radio_roof_bad" android:text="하" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </RadioGroup>

        <!-- 창호 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="창호"
            android:textSize="16sp"
            android:layout_marginTop="8dp"/>
        <RadioGroup
            android:id="@+id/radioGroup_window"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton android:id="@+id/radio_window_good" android:text="상" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/radio_window_normal" android:text="중" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/radio_window_bad" android:text="하" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </RadioGroup>

        <!-- 주차 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="주차"
            android:textSize="16sp"
            android:layout_marginTop="8dp"/>
        <RadioGroup
            android:id="@+id/radioGroup_parking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton android:id="@+id/radio_parking_good" android:text="상" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/radio_parking_normal" android:text="중" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/radio_parking_bad" android:text="하" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </RadioGroup>

        <!-- 기타사항 입력 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="기타사항"
            android:textSize="16sp"
            android:layout_marginTop="16dp"/>
        <EditText
            android:id="@+id/editText_remarks"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:hint="기타 특이사항을 입력하세요."
            android:gravity="top"
            android:background="@android:drawable/edit_text"
            android:padding="8dp"
            android:inputType="textMultiLine"/>

        <!-- 음성 입력 버튼 -->
        <Button
            android:id="@+id/button_voice_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🎤 음성 입력"
            android:layout_marginTop="8dp"/>

        <!-- 뒤로가기 버튼 -->
        <Button
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="←"
            android:layout_marginTop="16dp"
            android:backgroundTint="#6200EE"
            android:textColor="#FFFFFF"
            android:padding="8dp"/>

    </LinearLayout>
</ScrollView>
