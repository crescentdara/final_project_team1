<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- ✅ 외부 앱 호출 가능하도록 queries 정의 (Tmap 관련 패키지) -->
    <queries>
        <package android:name="com.skt.tmap.ku" />
        <package android:name="com.skt.skaf.l001mtm091" />
    </queries>

    <!-- ✅ 권한 설정 -->
    <uses-permission android:name="android.permission.INTERNET" /> <!-- 네트워크 통신 -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" /> <!-- 정밀 위치 -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" /> <!-- 대략적 위치 -->

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Final_Project_Team1"
        android:usesCleartextTraffic="true">

        <!-- ✅ 네이버맵 인증키 -->
        <meta-data
            android:name="com.naver.maps.map.NCP_KEY_ID"
            android:value="eeh71qt74n" />

        <!-- ✅ 메인 액티비티 (앱 실행 시 진입점 아님, IntroActivity 이후 이동됨) -->
        <activity android:name=".MainActivity" />

        <!-- ✅ 지도/경로 관련 Activity -->
        <activity android:name=".ui.surveyList.ArActivity" />
        <activity android:name=".ui.surveyList.FullMapActivity" />
        <activity android:name=".ui.surveyList.RouteActivity" />
        <activity android:name=".ui.surveyList.SurveyListActivity" />

        <!-- ✅ IntroActivity를 앱 실행시 최초 화면으로 지정 -->
        <activity
            android:name=".ui.intro.IntroActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- ❌ 기존: LoginActivity가 런처였으나 IntroActivity로 교체 -->
        <!--
        <activity
            android:name=".ui.login.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        -->

        <!-- ✅ LoginActivity: 일반 로그인 화면 -->
        <activity
            android:name=".ui.login.LoginActivity"
            android:exported="true" />

        <!-- ✅ 조사예정 관리 화면 -->
        <activity android:name=".ui.survey.SurveyStatusActivity" />

        <!-- ✅ 전송완료 페이지 (조사내역 조회 시 이동) -->
        <activity android:name=".ui.transmission.TransmissionCompleteActivity" />

    </application>
</manifest>
