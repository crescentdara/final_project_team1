<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="@dimen/category_corner_radius"
    app:cardElevation="8dp"
    app:strokeColor="#D1D5DB"
    app:strokeWidth="@dimen/category_stroke_width">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- ✅ 헤더 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="카테고리"
                android:textColor="@color/primary_blue"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/btnClose"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="닫기"
                android:src="@android:drawable/ic_menu_close_clear_cancel" />
        </LinearLayout>

        <!-- ✅ 구분선 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="12dp"
            android:background="#E0E0E0" />

        <!-- ✅ 메뉴 버튼들 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSurveyScheduled"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="조사예정 관리"
            android:textColor="@color/text_primary"
            app:icon="@android:drawable/ic_menu_agenda"
            app:iconGravity="textStart"
            app:iconTint="@color/primary_blue"
            app:strokeColor="@color/primary_blue" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnResurveyTarget"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="재조사 대상"
            android:textColor="@color/text_primary"
            app:icon="@android:drawable/ic_menu_manage"
            app:iconGravity="textStart"
            app:iconTint="@color/primary_blue"
            app:strokeColor="@color/primary_blue" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSurveyHistory"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="조사내역 조회"
            android:textColor="@color/text_primary"
            app:icon="@android:drawable/ic_menu_edit"
            app:iconGravity="textStart"
            app:iconTint="@color/primary_blue"
            app:strokeColor="@color/primary_blue" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnNotTransmitted"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="미전송 내역"
            android:textColor="@color/text_primary"
            app:icon="@android:drawable/ic_menu_upload"
            app:iconGravity="textStart"
            app:iconTint="@color/primary_blue"
            app:strokeColor="@color/primary_blue" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>