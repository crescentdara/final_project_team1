<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_light_gray">

    <!-- 상단 앱바 -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="8dp"
        app:elevation="8dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="@drawable/toolbar_background"
            android:paddingHorizontal="16dp">

            <!-- 좌측 알림 아이콘 -->
            <ImageView
                android:id="@+id/ivNotification"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_bell"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="알림"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <!-- 중앙 타이틀 -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="부동산 실태조사"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:letterSpacing="0.02"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <!-- 우측 로그아웃 버튼 -->
            <TextView
                android:id="@+id/tvLogout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="로그아웃"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:padding="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.appbar.AppBarLayout>


    <!-- 스크롤 가능한 콘텐츠 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- ✅ 조사원 현황 카드 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardSurveyor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:backgroundTint="@android:color/white"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:strokeColor="#E8E8E8"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- 상단 제목 -->
                    <TextView
                        android:id="@+id/tvCardTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="활동현황"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp" />

                    <!-- 조사원 정보 컨테이너 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="20dp">

                        <!-- 조사원 아이콘 -->
                        <LinearLayout
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="@drawable/circle_background"
                            android:gravity="center"
                            android:layout_marginEnd="16dp">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_person"
                                app:tint="@color/primary_blue" />
                        </LinearLayout>

                        <!-- 조사원 정보 -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <!-- 조사원 이름 -->
                            <TextView
                                android:id="@+id/tvUserName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="조사원 이름"
                                android:textColor="@color/text_primary"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <!-- 사번 -->
                            <TextView
                                android:id="@+id/tvEmpNo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="사번 : -"
                                android:textColor="@color/text_secondary"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- 통계 정보 그리드 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <!-- 진행률 -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="12dp"
                            android:background="@drawable/rounded_border">

                            <TextView
                                android:id="@+id/tvProgress"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="-%"
                                android:textColor="@color/primary_blue"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="진행률"
                                android:textColor="@color/text_secondary"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <!-- 총 조사 건수 -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="12dp"
                            android:layout_marginHorizontal="8dp"
                            android:background="@drawable/rounded_border">

                            <TextView
                                android:id="@+id/tvTotalCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="-"
                                android:textColor="@color/text_primary"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="총 건수"
                                android:textColor="@color/text_secondary"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <!-- 금일 완료 -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="12dp"
                            android:background="@drawable/rounded_border">

                            <TextView
                                android:id="@+id/tvTodayCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="-"
                                android:textColor="@color/green"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="금일 완료"
                                android:textColor="@color/text_secondary"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>



            <!-- ✅ 빠른 작업 버튼 (조사예정관리, 재조사대상, 조사내역조회, 미전송내역) -->
            <LinearLayout
                android:id="@+id/quickActions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnScheduled"
                        style="@style/Widget.MaterialComponents.Button"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:backgroundTint="@color/primary_blue"
                        android:text="조사예정관리"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        app:icon="@drawable/ic_survey"
                        app:iconGravity="textStart"
                        app:iconPadding="8dp"
                        app:cornerRadius="16dp"
                        app:elevation="4dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnReinspect"
                        style="@style/Widget.MaterialComponents.Button"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:backgroundTint="@color/primary_blue"
                        android:text="재조사대상"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        app:icon="@drawable/ic_edit"
                        app:iconGravity="textStart"
                        app:iconPadding="8dp"
                        app:cornerRadius="16dp"
                        app:elevation="4dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnHistory"
                        style="@style/Widget.MaterialComponents.Button"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:backgroundTint="@color/primary_blue"
                        android:text="조사내역조회"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        app:icon="@drawable/ic_chart"
                        app:iconGravity="textStart"
                        app:iconPadding="8dp"
                        app:cornerRadius="16dp"
                        app:elevation="4dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnNotTransmitted"
                        style="@style/Widget.MaterialComponents.Button"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:backgroundTint="@color/primary_blue"
                        android:text="미전송내역"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        app:icon="@drawable/ic_error"
                        app:iconGravity="textStart"
                        app:iconPadding="8dp"
                        app:cornerRadius="16dp"
                        app:elevation="4dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- ✅ 조사현황 (4개 요약 카드) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardDashboard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/white"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:strokeColor="#E8E8E8"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="조사현황"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:orientation="horizontal"
                        android:weightSum="4">

                        <!-- 조사예정 -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center_horizontal"
                            android:padding="12dp"
                            android:layout_marginEnd="8dp">
                            <FrameLayout
                                android:layout_width="48dp"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:foregroundGravity="bottom">
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/rounded_soft_card" />
                                <View
                                    android:id="@+id/barScheduledBg"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@color/blue_soft" />
                                <View
                                    android:id="@+id/barScheduled"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_gravity="bottom"
                                    android:background="@color/primary_blue" />
                            </FrameLayout>
                            <TextView
                                android:id="@+id/tvDashScheduled"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="@color/primary_blue"
                                android:textSize="18sp"
                                android:textStyle="bold" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="조사예정"
                                android:textColor="@color/text_secondary"
                                android:textSize="12sp"
                                android:ellipsize="end"
                                android:singleLine="true" />
                        </LinearLayout>

                        <!-- 재조사대상 -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center_horizontal"
                            android:padding="12dp"
                            android:layout_marginEnd="8dp">
                            <FrameLayout
                                android:layout_width="48dp"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:foregroundGravity="bottom">
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/rounded_soft_card" />
                                <View
                                    android:id="@+id/barReinspectBg"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@color/red_soft" />
                                <View
                                    android:id="@+id/barReinspect"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_gravity="bottom"
                                    android:background="@color/red" />
                            </FrameLayout>
                            <TextView
                                android:id="@+id/tvDashReinspect"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="@color/red"
                                android:textSize="18sp"
                                android:textStyle="bold" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="재조사"
                                android:textColor="@color/text_secondary"
                                android:textSize="12sp"
                                android:ellipsize="end"
                                android:singleLine="true" />
                        </LinearLayout>

                        <!-- 미전송 -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center_horizontal"
                            android:padding="12dp"
                            android:layout_marginEnd="8dp">
                            <FrameLayout
                                android:layout_width="48dp"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:foregroundGravity="bottom">
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/rounded_soft_card" />
                                <View
                                    android:id="@+id/barNotTransmittedBg"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@color/orange_soft" />
                                <View
                                    android:id="@+id/barNotTransmitted"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_gravity="bottom"
                                    android:background="@color/orange" />
                            </FrameLayout>
                            <TextView
                                android:id="@+id/tvDashNotTransmitted"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="@color/orange"
                                android:textSize="18sp"
                                android:textStyle="bold" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="미전송"
                                android:textColor="@color/text_secondary"
                                android:textSize="12sp"
                                android:ellipsize="end"
                                android:singleLine="true" />
                        </LinearLayout>

                        <!-- 결재대기중 -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center_horizontal"
                            android:padding="12dp">
                            <FrameLayout
                                android:layout_width="48dp"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:foregroundGravity="bottom">
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/rounded_soft_card" />
                                <View
                                    android:id="@+id/barPendingApprovalBg"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="#EFEFEF" />
                                <View
                                    android:id="@+id/barPendingApproval"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_gravity="bottom"
                                    android:background="@color/text_primary" />
                            </FrameLayout>
                            <TextView
                                android:id="@+id/tvDashPendingApproval"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="@color/text_primary"
                                android:textSize="18sp"
                                android:textStyle="bold" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="결재대기"
                                android:textColor="@color/text_secondary"
                                android:textSize="12sp"
                                android:ellipsize="end"
                                android:singleLine="true" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </ScrollView>

    <!-- ✅ 하단 푸터 네비게이션 -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal"
        android:background="@android:color/white"
        android:paddingHorizontal="12dp"
        android:paddingTop="6dp"
        android:paddingBottom="8dp"
        android:elevation="6dp">

        <LinearLayout
            android:id="@+id/navScheduled"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_survey"
                app:tint="@color/primary_blue" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="조사예정관리"
                android:textSize="10sp"
                android:textColor="@color/text_secondary" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/navReinspect"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_edit"
                app:tint="@color/primary_blue" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="재조사대상"
                android:textSize="10sp"
                android:textColor="@color/text_secondary" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/navHome"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_menu_mapmode"
                app:tint="@color/primary_blue" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="메인페이지"
                android:textSize="10sp"
                android:textColor="@color/text_secondary" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/navHistory"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_chart"
                app:tint="@color/primary_blue" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="조사내역조회"
                android:textSize="10sp"
                android:textColor="@color/text_secondary" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/navNotTransmitted"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_error"
                app:tint="@color/primary_blue" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="미전송내역"
                android:textSize="10sp"
                android:textColor="@color/text_secondary" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>